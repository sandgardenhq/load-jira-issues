{
  "name": "load-jira-issues",
  "version": "1.0.0",
  "description": "GitHub Action to extract JIRA issue references from Git commits",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build dist/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "all": "npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandgardenhq/load-jira-issues.git"
  },
  "keywords": [
    "github-actions",
    "jira",
    "issue-tracking",
    "automation",
    "documentation"
  ],
  "author": "Sandgarden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sandgardenhq/load-jira-issues/issues"
  },
  "homepage": "https://github.com/sandgardenhq/load-jira-issues#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@vercel/ncc": "^0.38.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^6.0.0",
    "jira.js": "^5.2.2"
  }
}
